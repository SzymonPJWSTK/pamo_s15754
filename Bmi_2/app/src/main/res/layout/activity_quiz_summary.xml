<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".QuizSummaryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/wrongAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:background="@color/wrong"/>

        <TextView
            android:id="@+id/correctAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/correct"
            android:textSize="25sp"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/returnToMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/returnToMain" />

        <Button
            android:id="@+id/showChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/showChart" />

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="gone" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>